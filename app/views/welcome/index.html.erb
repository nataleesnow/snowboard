<div class="row small-up-2 medium-up-3 large-up-4">
  <%- @owners.each do |owner| %>
    <div class="column">
      <p class='p-underline'>
        <strong><%= owner.name %></strong>
      </p>
      <%- owner.lift_passes.each do |lp| %>
        <div class=''>
          <%= lp.season.view_year %>&nbsp;
          <%= link_to_lift_pass(lp) %>
        </div>
        <% if false %>
          <%= radio_button 'lift', 'pass', lp.id %>
          <%= render 'wtp_modal', lp: lp %>
        <% end %>
      <%- end %>
    </div>
  <%- end %>
</div>

