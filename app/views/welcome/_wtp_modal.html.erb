<style>
  .small-input {
    height: 30px;
    width: 70px;
    display: inline-block;
    margin-top: 10px;
  }
</style>
<%- if lp.wtp_number.blank? %>
  <div class="reveal" id="lp_<%= lp.id %>" data-reveal data-close-on-click="true">
    <div class="input-group">
      <span class="input-group-label"><%= lp.season.begin_year %> - <%= lp.season.end_year %> season pass WTP:</span>
      <input class="small-input input-group-field wtp_<%= lp.id %>">-
      <input class="small-input input-group-field wtp_<%= lp.id %>">-
      <input class="small-input input-group-field wtp_<%= lp.id %>">
      <div class="input-group-button">
        <input type="submit" class="button save_wtp" value="Submit" data-lift-pass-id="<%= lp.id %>" href="<%= save_wtp_path %>">
      </div>
    </div>
    <div class="callout alert text-center" style="display: none;"></div>
  </div>
<%- end %>
